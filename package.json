{
	"name": "@collagejs/svelte",
	"version": "0.1.0",
	"description": "Svelte v5 integration for the CollageJS micro-frontend library",
	"author": {
		"name": "José Pablo Ramírez Vargas",
		"email": "webJose@gmail.com",
		"url": "https://github.com/webJose"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/collagejs/svelte.git"
	},
	"bugs": {
		"url": "https://github.com/collagejs/svelte/issues"
	},
	"homepage": "https://collagejs.dev",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:e2e": "playwright test"
	},
	"files": [
		"dist",
		"!dist/testing",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@collagejs/core": "^0.1.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@vitest/browser-playwright": "^4.0.15",
		"playwright": "^1.57.0",
		"publint": "^0.3.15",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1"
	},
	"keywords": [
		"svelte",
		"collage",
		"collage-js",
		"collagejs",
		"micro-frontend",
		"mfe",
		"single-spa"
	]
}
